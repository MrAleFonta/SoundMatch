    "/api/auth/login": { 
        "post": { 
            "tags": [ 
                "Users"
            ],
            "summary": "Login",
            "parameters": [{
              "in": "body",
              "name": "Login",
              "description": "User Login",
              "required": true,
              "schema": {
                "required": [
                  "email",
                  "password"
                ],
                "properties": {
                    "email": { 
                        "type": "string",
                        "required": true
                    },
                    "password": { 
                        "type": "string",
                        "required": true
                    }
                }
              }
            }],
            "responses": {
                "200": {
                    "description": "Token Generated",
                    "schema": {
                        "$ref": "#/definitions/Token"
                    }
                },
                "400": {
                  "description": "",
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "string",
                        "description": "Possibili errori",
                        "enum": [
                          "Error, give all the information",
                          "Wrong password",
                          "Error"
                        ]
                      }
                    }
                  }
                }
            }
        }
    },
    "/api/auth/registration": { 
        "post": { 
            "tags": [ 
                "Users"
            ],
